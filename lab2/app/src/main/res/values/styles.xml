<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="viewText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#004953</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="viewText_portrait"  parent = "@style/viewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">197dp</item>
        <item name="android:layout_marginBottom">467dp</item>
    </style>

    <style name="viewText_landscape"  parent = "@style/viewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">148dp</item>
        <item name="android:layout_marginBottom">170dp</item>
    </style>

    <style name="button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="button_portrait"  parent = "@style/button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">400dp</item>
        <item name="android:layout_marginBottom">305dp</item>
    </style>

    <style name="button_landscape"  parent = "@style/button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">296dp</item>
        <item name="android:layout_marginBottom">67dp</item>
    </style>

    <style name="enteredText">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="enteredText_portrait"  parent = "@style/enteredText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">303dp</item>
        <item name="android:layout_marginBottom">383dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="enteredText_landscape"  parent = "@style/enteredText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">179dp</item>
        <item name="android:layout_marginBottom">193dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>